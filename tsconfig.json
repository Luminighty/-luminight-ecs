{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"strict": true,
		"noImplicitReturns": true,
		"noImplicitAny": false,
		"module": "CommonJS",
		"moduleResolution": "node",
		"target": "es6",
		"lib": ["ES2017", "DOM"],
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
    "declaration": true,
	},
	"include": [
		"./src/index.ts",
		"./src/**/*",
	]
}